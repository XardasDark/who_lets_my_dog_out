<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingVertical="10dp"
    android:paddingLeft="15dp"
    android:paddingRight="60dp"
    android:clipToPadding="false">

    <androidx.cardview.widget.CardView
        android:id="@+id/messagerTheirAvatarCV"
        android:layout_width="51dp"
        android:layout_height="51dp"
        android:elevation="12dp"
        app:cardCornerRadius="100dp">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:background="@drawable/messages_circle"
        android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/name_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/messagerTheirAvatarCV"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@+id/messagerTheirAvatarCV"
        android:background="@drawable/messages_their_name"
        android:padding="4dp"
        android:text="Rose"
        android:textFontWeight="700" />

    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_message"
        android:layout_alignLeft="@+id/name_message"
        android:background="@drawable/messages_their"
        android:elevation="2dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="12dp"
        android:text="This is a long message that should probably wrap. Content to fill"
        android:textSize="18dp" />

</RelativeLayout>